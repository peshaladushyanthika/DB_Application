{$R *.dfm}

uses DataModule;

procedure TProfile.ButtonCreateClick(Sender: TObject);
begin
  frmProfileDetails.Caption := 'profile detais';
end;

procedure TProfile.FormShow(Sender: TObject);
begin
    with DM.QrySelect do
    begin
      active := false;
      sql.clear;
      sql.Text := 'SELECT * FROM profile';
      active := true;

    end;
end;

